<Window x:Class="Tying_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tying_test"
        mc:Ignorable="d"
        Title="Typing test" 
        WindowState="Maximized" Height="427">
    <Grid RenderTransformOrigin="0.648,0.666">
        <TextBox x:Name="textboxForUserToDropTextIn" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Hello" VerticalAlignment="Top" Width="188" TextChanged="TextBox_TextChanged_1" Height="73" Margin="0,266,0,0" KeyDown="EnterButton" />
        <Button x:Name="btnGenerateTypingTest" Content="Send text" HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Bottom" Click="SendText" Height="59" Width="146" RenderTransformOrigin="0.507,0.204" />
        <TextBox x:Name="typingTestText" Visibility="Visible" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Hello" VerticalAlignment="Top" Width="780" TextChanged="TextBox_TextChanged_1" RenderTransformOrigin="0.358,-1.559" Margin="0,7,0,0" Height="254" Opacity="0.5" Panel.ZIndex="-1" />
        <TextBox x:Name="typingTest" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" TextChanged="TextBox_TextChanged_1" RenderTransformOrigin="0.358,-1.559" Margin="0,7,0,0" Height="254" AllowDrop="True" Panel.ZIndex="1" Background="{x:Null}" KeyUp="TypingTestTypedCharacter" KeyDown="AllowKeyPress" />
    </Grid>
</Window>
